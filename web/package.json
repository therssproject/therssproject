{
  "name": "rss-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "lint:strict": "eslint --max-warnings=2 src",
    "ts:check": "tsc --noEmit",
    "ts:watch": "tsc --noEmit --watch",
    "test:watch": "jest --watch",
    "test": "jest",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "release": "standard-version",
    "push-release": "git push --follow-tags origin master",
    "postbuild": "next-sitemap",
    "prepare": "cd ../ && husky install ./rss-web/.husky"
  },
  "engines": {
    "node": "16",
    "yarn": "1.22"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.5",
    "@heroicons/react": "^1.0.6",
    "@hookform/resolvers": "^2.8.8",
    "clsx": "^1.1.1",
    "color-hash": "^2.0.1",
    "date-fns": "^2.28.0",
    "fp-ts": "^2.11.10",
    "fp-ts-react-stable-hooks": "^1.5.0",
    "fp-ts-routing": "^0.5.4",
    "io-ts": "^2.2.16",
    "io-ts-extra": "^0.11.6",
    "io-ts-reporters": "^2.0.1",
    "io-ts-types": "^0.5.16",
    "jotai": "^1.6.4",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "next": "^12.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.29.0",
    "react-icons": "^4.3.1",
    "remote-data-ts": "^3.0.1",
    "tailwind-merge": "^1.2.0",
    "ts-pattern": "^4.0.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@svgr/webpack": "^6.2.1",
    "@tailwindcss/forms": "^0.4.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@types/color-hash": "^1.0.2",
    "@types/react": "^17.0.40",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^11.2.6",
    "next-sitemap": "^1.9.12",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "standard-version": "^9.3.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  }
}
